<div class="row">
  <%= form_for [:admin, @song], html: {class: "form-horizontal"} do |f| %>
      <% if @song.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@song.errors.count, "error") %> prohibited this product from being saved:</h2>
            <ul>
              <% @song.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :title, class: 'col-lg-1 control-label' %>
        <div class="col-lg-6">
          <%= f.text_field :title, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :link, class: 'col-lg-1 control-label' %>
        <div class="col-lg-6">
          <%= f.text_field :link, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :episode_id, class: 'col-lg-1 control-label' %>
        <div class="col-lg-6">
          <%= f.collection_select :episode_id, Episode.order(:name), :id, :name, {}, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-1 col-lg-6">
          <%= f.submit class: 'btn btn-primary btn-block' %>
        </div>
      </div>
  <% end%>
</div>