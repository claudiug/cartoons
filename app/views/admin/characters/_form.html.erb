<div class="row">
  <%= form_for [:admin, @character], html: {class: "form-horizontal"} do |f| %>
      <% if @character.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@character.errors.count, "error") %> prohibited this product from being saved:</h2>
            <ul>
              <% @character.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :name, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>



      <div class="form-group">
        <%= f.label :cartoon_id, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.collection_select :cartoon_id, Cartoon.order(:title), :id, :title, {},  class:'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'col-lg-1 control-label' %>
        <div class="col-lg-8">
          <%= f.cktext_area  :description,  class: 'form-control',cols:"40", rows:"10", :ckeditor => {:language => "en"} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :role, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.text_field :role, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :first_appearance, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.text_field :first_appearance, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :occupation, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.text_field :occupation, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :spouse, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.text_field :spouse, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :religion, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.text_field :religion, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :children, class: 'col-lg-1 control-label' %>
        <div class="col-lg-4">
          <%= f.text_field :role, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-1 col-lg-10">
          <%= f.submit( class: 'btn btn-primary') %>
        </div>
      </div>
  <% end%>
</div>