<div class="row">
  <table class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>#</th>
      <th> <%= sortable "name" %></th>
      <th> <%= sortable "description" %></th>
      <th> <%= sortable "role" %></th>
      <th> <%= sortable "first appesrance" %> </th>
      <th> <%= sortable "occupation" %></th>
      <th> <%= sortable "spose" %> </th>
      <th> <%= sortable "religion" %></th>
      <th> <%= sortable "children" %></th>

      <th> Options</th>
    </tr>
    </thead>
    <tbody>
    <% @characters.each do |character| %>

        <tr>
          <td><%= character.id %></td>
          <td><%= character.name %></td>
          <td><%= character.description %></td>
          <td><%= character.role %></td>
          <td><%= character.first_appearance %></td>
          <td><%= character.occupation %></td>
          <td><%= character.spouse %></td>
          <td><%= character.religion %></td>
          <td><%= character.children %></td>

          <td>
            <%= link_to "Edit", edit_admin_character_path(character), class: 'btn btn-primary' %>
            <%= link_to "Show", admin_character_path(character), class: 'btn btn-info' %>
            <%= link_to "Delete", admin_character_path(character),
                        method: :delete,
                        data: {confirm: "are you sure you want to destroy?"},
                        class: 'btn btn-danger'
            %>
          </td>
        </tr>


    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="hpFooterBlock">
    <div class="apple_pagination">
      <div class="page_info">
        <%= page_entries_info @characters %>
      </div>
      <%= will_paginate @characters, :container => false%>
    </div>
  </div>
</div>