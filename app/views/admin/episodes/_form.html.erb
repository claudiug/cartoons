<div class="row">
  <%= form_for [:admin, @episode], html: {class: "form-horizontal"} do |f| %>
      <% if @episode.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@episode.errors.count, "error") %> prohibited this product from being saved:</h2>
            <ul>
              <% @episode.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group">
        <%= f.label :name, class: 'col-lg-1 control-label' %>
        <div class="col-lg-2">
          <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :episode_number, class: 'col-lg-1 control-label' %>
        <div class="col-lg-2">
          <%= f.text_field :episode_number, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :season_number, class: 'col-lg-1 control-label' %>
        <div class="col-lg-2">
          <%= f.text_field :season_number, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :guest_actors, class: 'col-lg-1 control-label' %>
        <div class="col-lg-2">
          <%= f.text_field :guest_actors, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :plot, class: 'col-lg-1 control-label' %>
        <div class="col-lg-2">
          <%= f.text_field :plot, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :background, class: 'col-lg-1 control-label' %>
        <div class="col-lg-2">
          <%= f.text_field :background, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :review, class: 'col-lg-1 control-label' %>
        <div class="col-lg-8">
          <%= f.cktext_area  :review,  class: 'form-control',cols:"40", rows:"10", :ckeditor => {:language => "en"} %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-1 col-lg-10">
          <%= f.submit( class: 'btn btn-primary') %>
        </div>
      </div>
  <% end%>
</div>
